<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!--Background color-->
    <solid
        android:color="#9361FF" >
    </solid>

    <!-- View border color and width -->
    <stroke
        android:width="1dp"
        android:color="#FFFF" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="10dp"   >
    </corners>
    <padding android:left="15dp" android:top="10dp" android:right="0dp" android:bottom="0dp" />
</shape>